<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".BeginningFragment">

    <TextView
        android:id="@+id/tvTitleAuthorize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="168dp"
        android:text="@string/tv_title_aut"
        android:textColor="@color/tv_activity"
        android:textSize="24dp" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/backgroundTint_b_reg"
        android:text="@string/b_start"
        android:textColor="@color/textColor_b_reg"
        android:textSize="16sp"
        android:textStyle="bold" />

  </LinearLayout>